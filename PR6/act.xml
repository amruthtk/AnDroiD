<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Company Name -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="MEESHO PVT. LTD."
        android:textSize="36sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Name -->

    <!-- Title -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Aneesa"
        android:textSize="28sp" />

    <!-- Line Divider -->

    <!-- Phone -->

    <!-- Address -->
    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Senior HR Manager"
        android:textSize="24sp" />

    <View
        android:id="@+id/horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textView5"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        android:background="#888888" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/horizontal_line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="monospace"
        android:text="+919995557772"
        android:textSize="20sp" />

    <!-- Email -->
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="36, 100 Feet Rd, opposite Marks & Spencer,\nin the bustling area of Koramangala, Bengaluru"
        android:textSize="16sp" />

    <!-- Website -->
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:fontFamily="casual"
        android:text="aneemonna@gmail.in"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="306dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="cursive"
        android:text="www.meesho.com"
        android:textSize="16sp" />

</RelativeLayout>

